<config>
    <tabs>
        <configtab translate="label" module="extraconfig">
            <label>Hello Config</label>
            <sort_order>99999</sort_order>
        </configtab>
    </tabs> 
    <sections>
        <extraconfig_options translate="label" module="extraconfig">
            <label>Hello World Config Options</label>
            <tab>configtab</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>   

    		<groups>
                <messages translate="label">
                    <label>Demo Of Config Fields</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>                
                	<fields>
			        	<hello_message>
			            <label>Message</label>
			            <frontend_type>text</frontend_type>
			            <sort_order>1</sort_order>
			            <show_in_default>1</show_in_default>
			            <show_in_website>1</show_in_website>
			            <show_in_store>1</show_in_store>                    
			        	</hello_message>
					    <hello_time>
					        <label>Time to Say Hello</label>
					        <frontend_type>time</frontend_type>
					        <sort_order>1</sort_order>
					        <show_in_default>1</show_in_default>
					        <show_in_website>1</show_in_website>
					        <show_in_store>1</show_in_store>                    
					    </hello_time> 
						<hello_select>
						    <label>Message</label>
						    <frontend_type>select</frontend_type>
						    <source_model>extraconfig/words</source_model> 
						    <sort_order>1</sort_order>
						    <show_in_default>1</show_in_default>
						    <show_in_website>1</show_in_website>
						    <show_in_store>1</show_in_store>                    
						</hello_select>

    				</fields>

                </messages>
            
    			<otrogrupo translate="label">
                    <label>Another Config Fields</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>                
                	<fields>
			        	<hello1_message>
			            <label>Message</label>
			            <frontend_type>text</frontend_type>
			            <sort_order>1</sort_order>
			            <show_in_default>1</show_in_default>
			            <show_in_website>1</show_in_website>
			            <show_in_store>1</show_in_store>                    
			        	</hello1_message>
    				</fields>

                </otrogrupo>


            </groups>


        </extraconfig_options>
    </sections> 



</config>