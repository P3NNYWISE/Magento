<config>
    <acl>
        <resources>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <myextension_mymodule translate="title" module="myextension_mymodule">
                                        <title>Mymodule</title>
                                    </myextension_mymodule>
                                </children>
                            </config>
                        </children>
                    </system>
                    <myextension_mymodule translate="title" module="myextension_mymodule">
                        <title>MyMenu</title>
                        <children>
                            <articulo translate="title" module="myextension_mymodule">
                                <title>Articulo</title>
                                <sort_order>0</sort_order>
                            </articulo>
                            <articulo_comments translate="title" module="myextension_mymodule">
                                <title>Manage Articulo Comments</title>
                                <sort_order>5</sort_order>
                            </articulo_comments>
                            <articulo_attributes translate="title" module="myextension_mymodule">
                                <title>Manage Articulo attributes</title>
                                <sort_order>7</sort_order>
                            </articulo_attributes>
                        </children>
                    </myextension_mymodule>
                </children>
            </admin>
        </resources>
    </acl>
    <menu>
        <myextension_mymodule translate="title" module="myextension_mymodule">
            <title>MyMenu</title>
            <sort_order>1500</sort_order>
            <children>
                <articulo translate="title" module="myextension_mymodule">
                    <title>Articulo</title>
                    <action>adminhtml/mymodule_articulo</action>
                    <sort_order>0</sort_order>
                </articulo>
                <articulo_comments translate="title" module="myextension_mymodule">
                    <title>Manage Articulo Comments</title>
                    <action>adminhtml/mymodule_articulo_comment</action>
                    <sort_order>4</sort_order>
                </articulo_comments>
                <articulo_attributes translate="title" module="myextension_mymodule">
                    <title>Manage Articulo Attributes</title>
                    <action>adminhtml/mymodule_articulo_attribute</action>
                    <sort_order>7</sort_order>
                </articulo_attributes>
            </children>
        </myextension_mymodule>
    </menu>
</config>
