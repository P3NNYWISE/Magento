<config>
    <modules>
        <MasteringMagento_Example>
            <version>6.1.0</version>
        </MasteringMagento_Example>
    </modules>
    <!-- Configuracion Global-->
    <global>
        <models>
            <!-- Indica Carpeta raiz de los models del modulo -->
            <example>
                <class>MasteringMagento_Example_Model</class>
                <resourceModel>example_resource</resourceModel>
            </example>
            
            <example_resource>
                <class>MasteringMagento_Example_Model_Resource</class>
                <!-- Tablas -->
                <entities>
                    <event>
                        <table>example_event</table>
                    </event>
                    <event_registrant>
                        <table>example_event_registrant</table>
                    </event_registrant>
                </entities>
            </example_resource>

        </models>
        <resources>
            <example_setup>
                <setup>
                    <module>MasteringMagento_Example</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </example_setup>
        </resources>

        <!-- Indica Carpeta raiz de los blocks del modulo-->
        <blocks>
            <example>
                <class>MasteringMagento_Example_Block</class>
            </example>
        </blocks>
        <!-- Indica Carpeta raiz de los Helper del modulo-->
        <helpers>
            <example>
                <class>MasteringMagento_Example_Helper</class>
            </example>
        </helpers>
        <!-- Modulo catalogo -->
        <catalog>
            <product>
                <type>
                    <event translate="label" module="example">
                        <label>Event Registration</label>
                        <model>example/product_type_event</model>
                        <composite>0</composite>
                    </event>
                    <grouped>
                        <allow_product_types>
                            <event />
                        </allow_product_types>
                    </grouped>
                    <configurable>
                        <allow_product_types>
                            <event />
                        </allow_product_types>
                    </configurable>
                    <bundle>
                        <allow_product_types>
                            <event />
                        </allow_product_types>
                    </bundle>
                </type>
            </product>
        </catalog>

        <event>
                <catalog_product_get_final_price>
                    <observer>
                        <example_event>
                            <class> example/observer_catalog_product</class>
                            <method> getFinalPrice </method>
                        </example_event>
                    </observer>
                </catalog_product_get_final_price>
        </event>
        

    </global>
    <adminhtml>
        <layout>
            <updates>
                <example>
                    <file>example.xml</file>
                </example>
            </updates>            


                </example>
            </updates>
            
        </layout>
        
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <example before="Mage_Adminhtml">MasteringMagento_Example_Adminhtml</example>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <!-- rutas -->
    <frontend>
        <routers>
            <example>
                <use>standard</use>
                <args>
                    <frontName>example</frontName>
                    <module>MasteringMagento_Example</module>
                </args>
            </example>
        </routers>
        <layout>
            <updates>
                <example>
                    <file>example.xml</file>
                </example>
            </updates>
        </layout>
    </frontend>
</config>
