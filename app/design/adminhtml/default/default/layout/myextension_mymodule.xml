<layout>
    <adminhtml_mymodule_articulo_edit>
        <update handle="editor"/>
        <reference name="head">
            <action method="setCanLoadTinyMce"><load>1</load></action>
        </reference>
        <reference name="js">
            <block type="core/template" name="catalog.wysiwyg.js" template="catalog/wysiwyg/js.phtml"/>
        </reference>
        <reference name="left">
            <block name="articulo.tree" type="myextension_mymodule/adminhtml_articulo_tree" />
        </reference>
        <reference name="content">
            <block name="articulo.edit" type="myextension_mymodule/adminhtml_articulo_edit" template="myextension_mymodule/articulo/edit.phtml" />
        </reference>
        <reference name="js">
            <block type="core/template" template="catalog/wysiwyg/js.phtml" name="catalog.wysiwyg.js" />
        </reference>
    </adminhtml_mymodule_articulo_edit>
    <adminhtml_mymodule_articulo_catalog_product_articulos>
        <block type="core/text_list" name="root" output="toHtml">
            <block type="myextension_mymodule/adminhtml_catalog_product_edit_tab_articulo" name="catalog.product.edit.tab.articulos"/>
        </block>
    </adminhtml_mymodule_articulo_catalog_product_articulos>
    <!-- Implement category relation -->
    <adminhtml_mymodule_articulo_attribute_index>
        <reference name="content">
            <block type="myextension_mymodule/adminhtml_articulo_attribute" name="attribute_grid"></block>
        </reference>
    </adminhtml_mymodule_articulo_attribute_index>
    <adminhtml_mymodule_articulo_attribute_edit>
        <reference name="left">
            <block type="myextension_mymodule/adminhtml_articulo_attribute_edit_tabs" name="attribute_edit_tabs"></block>
        </reference>
        <reference name="content">
            <block type="myextension_mymodule/adminhtml_articulo_attribute_edit" name="attribute_edit_content"></block>
        </reference>
        <reference name="js">
            <block type="adminhtml/template" name="attribute_edit_js" template="myextension_mymodule/attribute/js.phtml">
                <action method="setMainEntityName"><name>articulo</name></action>
            </block>
        </reference>
    </adminhtml_mymodule_articulo_attribute_edit>
    <adminhtml_mymodule_articulo_comment_index>
        <reference name="menu">
            <action method="setActive">
                <menupath>myextension_mymodule/articulo_comment</menupath>
            </action>
        </reference>
        <reference name="content">
            <block type="myextension_mymodule/adminhtml_articulo_comment" name="articulo_comment_grid"/>
        </reference>
    </adminhtml_mymodule_articulo_comment_index>
    <adminhtml_mymodule_articulo_comment_grid>
        <block type="core/text_list" name="root" output="toHtml">
            <block type="myextension_mymodule/adminhtml_articulo_comment_grid" name="articulo_comment_grid"/>
        </block>
    </adminhtml_mymodule_articulo_comment_grid>
    <adminhtml_mymodule_articulo_comment_edit>
        <update handle="editor"/>
        <reference name="menu">
            <action method="setActive">
                <menupath>myextension_mymodule/articulo_comment</menupath>
            </action>
        </reference>
        <reference name="content">
            <block type="myextension_mymodule/adminhtml_articulo_comment_edit" name="articulo_comment_edit"></block>
        </reference>
        <reference name="left">
            <block type="myextension_mymodule/adminhtml_articulo_comment_edit_tabs" name="articulo_comment_tabs"></block>
        </reference>
    </adminhtml_mymodule_articulo_comment_edit>
</layout>
